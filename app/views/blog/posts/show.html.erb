<!--
    only showing one post at a time
-->
<% provide(:page_title, @post.title) %>
<% provide(:blog_active, "active") %>


<div class="row mt-3">
  <div class="col-sm-9 mx-auto">
    
           <!--
                <div class="thin-text small">
                    <!--remeber to sanitize tag input--
                    <%#= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name) }.join(', ') %>
                </div>
            -->
         
 
    <!--
      <img alt="" class="card-img-top card-topper" src="#{< #post.banner_image_url %>}"
      render tags somewhere
    -->

    <div class="">
      <h1><%= @post.title %></h1>
      <h5 class="text-muted text-thin"><%= @post.description %></h5>
      <hr>
      <div class="author-bio-little">
    
          <div class="row">
            
            <div class="col-auto ml-3">
              
              <%= image_tag(@post.author.gravatar_img_url) %>
            </div>
            <div class="col pt-2 px-0">
              
              <h6 class="my-0 py-0">
                <%= @post.author.name %>
              </h6>
        
            
                <small class="">
                <span class="text-muted text-thin">
                  Published: <%= @post.date_published %>
                </span>
                | Updated: <%= @post.date_updated %>
              </small>
              
            </div>
          </div>

        </div>
      
      
      <hr>
        
    </div>
      
 
    <div class="col py-3">

      <%= @post.body.html_safe %>
    </div>




        <div class="author-bio">
    
          <div class="row">
            
            <div class="col-auto mr-auto">
              
              <%= image_tag(@post.author.gravatar_img_url) %>
            </div>
            <div class="col">
              
              <small class="text-thin text-muted">WRITTEN BY:</small>
              <h4 class="author-name">
                <%= @post.author.name %>
              </h4>
        
              <h6 class="bio">
                <%= @post.author.bio %>
              </h6>
            </div>
          </div>

        </div>
 







    
    <!--Comments-->
    <div id="disqus_thread"></div>
    Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
      </div>
    </div>
    












