<!--whole row when small, else 1/3-->
<div class="col-sm-12 col-md-8 mb-0">
        <div class="card post-card">
                
            <%= link_to post do %>
        
            <div class="row m-0 p-0">

                <div class="col-auto m-0 p-0 align-left">
                    <img alt="" class="card-topper" src="#{<% post.banner_image_url %>}">
                
                </div>
                <div class="col pt-2">
    
                    <div class="card-block">
                        
                        <!--POST TITLE-->
                        <h5 class="card-title pb-1 m-0"><%= post.title %></h5>
                        
                        <!--DESCRIPTION-->
                        <h5 class="card-text text-thin text-muted">
                            <%= truncate(post.description, length: 75) %>
                        </h5>
                        
                        <!--AUTHOR-->
                        <small class="text-thin"><%= post.author.name %></small>    
                        <p>
                            <small class="card-text text-muted text-thin">Published: <%= post.date_published %></small>    
                            <small> | Updated: <%= post.date_updated %></small>
                        </p>
                        
                    </div>
                </div>
            </div>
            
            
            
            <% end %>
        </div>
        </div>
        